{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "My Zuplo API"
  },
  "paths": {
    "/users": {
      "x-zuplo-path": {
        "pathMode": "open-api"
      },
      "post": {
        "summary": "Create User",
        "description": "Create a new user. Most info is taken from JWT.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            }
          }
        },
        "x-zuplo-route": {
          "corsPolicy": "none",
          "handler": {
            "export": "default",
            "module": "$import(./modules/users-create)",
            "options": {}
          },
          "policies": {
            "inbound": ["request-validation-inbound"]
          }
        },
        "operationId": "75d86419-c7a9-4dad-a2ed-8dcfb4733578"
      }
    }
  },
  "components": {
    "schemas": {
      "CreateUserDto": {
        "title": "Body to create a user",
        "type": "object",
        "maxProperties": 3,
        "properties": {
          "displayName": {
            "type": "string",
            "description": "The users name. Visible to others."
          },
          "email": {
            "type": "string",
            "description": "The users email. Not visible to others."
          },
          "id": {
            "type": "string",
            "description": "User id."
          }
        },
        "required": ["displayName", "email", "id"]
      }
    }
  }
}
